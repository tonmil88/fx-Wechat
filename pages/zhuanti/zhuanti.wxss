/**index.wxss**/

page {
  width: 100%;
  height: 100%;
}

.container-zhuanti {
  width: 100%;
  height: 100%;
}

.container-zhuanti .nav {
  height: 90rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 90rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
}

.container-zhuanti .nav .nav-item {
  width: 33%;
  height: 86rpx;
  display: inline-block;
  text-align: center;
  letter-spacing: 2rpx;
  line-height: 86rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.container-zhuanti .nav .nav-item.active {
  color: red;
  border-bottom: 4rpx solid red;
}

.container-zhuanti .tab-box {
  width: 100%;
  height: calc(100% - 90rpx);
  box-sizing: border-box;
}

.container-zhuanti .tab-box swiper-item.tab-content {
  color: #000;
}

.container-zhuanti .tab-box swiper-item.tab-content .news-item {
  width: 100%;
   height: inherit;
}
/* 文章&问答 */
.container-zhuanti .tab-box swiper-item.tab-content .news-item .news-view {
  padding: 30rpx 0 30rpx 0;
  display: flex;
  border-bottom: 1px solid #eee;
  margin: 0 30rpx 0 30rpx;
}

.container-zhuanti .tab-box swiper-item.tab-content .news-item  .news-view>image {
  width: 241rpx;
  height: 148rpx;
}

.container-zhuanti .tab-box swiper-item.tab-content .news-item .news-view .news-content {
  margin-left: 20rpx;
  width: 100%;
  font-size: 28rpx;
}

.container-zhuanti .tab-box swiper-item.tab-content .news-item .news-view .news-title {
  line-height: 45rpx;
  overflow: hidden;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}

.container-zhuanti .pos {
  display: flex;
  justify-content: space-between;
}

.container-zhuanti .pos .fr {
  display: flex;
}
/* 文章 */
.wenzhang .pos {
  margin-top: 24rpx;
}
