page {
  height: 100%;
}

.container-anli-detail {
  height: 100%;
  background-color: #000;
}

swiper {
  width: 100%;
  height: calc(100% - 110rpx);
}

swiper swiper-item {
  width: 100%;
  height: 100%;
  margin-top: 16vh;
}

swiper image {
  width: 100%;
}

.detail-info {
  color: #fff;
  text-align: center;
  padding-top: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.anli-detail-content {
  color: white;
  padding: 40rpx 20rpx;
}

.anli-detail-content-tilte {
  color: white;
  border: 1rpx solid #ccc;
  display: inline-block;
  padding: 0 2rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 34rpx;
}

.anli-detail-content-discribe {
  font-size: 32rpx;
}
