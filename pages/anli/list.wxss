.anview-shaixuan{width: 100%;height: 100vh;}
.search{height: 60rpx;background-color: #f3f3f3;padding: 10rpx 40rpx;line-height: 60rpx;font-size: 32rpx;font-weight: 600;border-bottom: 1rpx solid #ff552e; position: fixed; top: 0; left: 0; width: 100%; z-index: 99;}
/* scroll-view{position: fixed;z-index: 99;} */
.dropdown-menu{width: 100%;height: 100%;padding:20rpx 10rpx 10rpx;box-sizing: border-box; }
.input-group{display: flex;align-items: center;justify-content: center;width: 100%;margin-bottom: 40rpx;}
.input-group input{width: 74%;height: 60rpx;border: 1rpx solid #ccc;text-indent: 20rpx;}
.input-group .input-group-btn .btn{width: 100rpx;font-size: 24rpx;height: 62rpx;line-height: 60rpx;text-align: center;background-color: #ff552e;}
.out_line{box-sizing: border-box;}
.out_line .line_left{float: left;width: 100rpx;text-align: center;font-size: 32rpx;font-weight: 600;}
.out_line .line_right{float: left;width: calc(100% - 100rpx);font-size: 30rpx;}
.out_line .line_right .weui-cell__bd{display: inline-block;padding: 10rpx;margin: 0 0rpx 14rpx 30rpx;border: 1rpx solid #ff552e;}
.weui-cell__hd{display: none;}
.weui-cell__bd.active{background-color: #ff552e;color: #fff;}
.out_line .clear{clear: both;}
button{background-color: #ff552e;margin-top: 20rpx;}

.anli-item {padding-top: 30px;
  width: 100%;
}

.anli-view {
  position: relative;
  height: 340rpx;
  display: flex;
  border-bottom: 1px solid #eee;
  margin: 40rpx 30rpx;
  border-radius: 10rpx;
  /* background: url("http://oss.e-homes.com.cn/201911/929833ea2e.jpg"); */
}

.anli-view .avatar {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.anli-view .bgc {
  z-index: -99;
  width: 100%;
  height: 100%;
}

.anli-content {
  position: absolute;
  right: 0;
  top: 0;
  width: 30%;
  height: 70%;
  margin-left: 20rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 0 0 5px 5px;
  padding: 20rpx 10rpx 10rpx;
  box-sizing: border-box;
  text-align: center;
}

.anli-content view {
  height: 50%;
}

.anli-content view span {
  display: block;
  line-height: 50rpx;
}

.anli-title {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  overflow: hidden;
  font-size: 32rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
}

.pl-bottom {
  margin-top: 30rpx;
}
