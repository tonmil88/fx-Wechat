<scroll-view class="anli-item" scroll-y="true">
<block wx:for="{{listData}}" wx:for-item="anli">
   <navigator url="../anli/show?id={{anli.id}}">
   <view class="anli-view">
     <image src="{{anli.thumb}}" wx:if="{{anli.thumb!=''}}"/>
     <view class="anli-content">
             <view class="anli-title">
             {{anli.title}}
             </view>           
           <view class="pos">
                <view class="anli-time">{{anli.inputtime}}</view>
                <view class="fr">
                  <view class="anli-see">
                  <image src="../../icons/see.png" />
                  {{anli.hits}}
                  </view>
                  <view class="anli-pl">
                  <image src="../../icons/message.png" />
                  {{anli.comments}}
                  </view>
                </view>
            </view>
     </view>
   </view>
   </navigator>
   </block>
</scroll-view>

<view class="pl-bottom">
<view hidden="{{hidden}}" class="hidden" wx:if="{{hasMore!='true'}}"><image src="../../icons/waiting.gif" /> 正在加载....</view>
<view hidden="{{hidden}}" class="hidden" wx:else>没有更多数据了....</view>
</view>