.container-anli-info {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.designer-kj {
  padding: 30rpx 0 30rpx;
}

.designer-kj .title {
  font-size: 38rpx;
  font-weight: 600;
  text-align: center;
}

.designer-kj .anli-detail {
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.designer-kj .anli-detail text {
  padding: 6px 0;
  color: #666;
}

.imgs {
  position: relative;
  height: 399rpx;
  margin: 32rpx 0 90rpx;
  overflow: visible;
}

.img-kj {
  width: 100%;
  height: 100%;
  background-color: green;
}

.img-dn {
  position: absolute;
  left: 50%;
  bottom: -70rpx;
  transform: translateX(-50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: red;
}

.name {
  font-weight: 600;
  font-size: 32rpx;
  text-align: center;
  color: #333;
}

.type {
  font-size: 28rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}

button {
  width: 260rpx;
  height: 60rpx;
  line-height: 62rpx;
  background: linear-gradient(to top, #e66505, #ff8a1b);
  color: #fff;
  font-weight: 400;
  margin-top: 20rpx;
}

.list-item {
  padding: 20rpx 0;
}

.list-item image {
  width: 100%;
  height: 399rpx;
  background-color: green;
}

.list-item .discribe {
  font-size: 32rpx;
  margin-top: 10rpx;
}

.list-item .discribe text {
  font-weight: 600;
  margin-right: 14rpx;
}
