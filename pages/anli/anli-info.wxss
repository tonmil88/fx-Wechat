.container-anli-info {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.designer-kj {
  padding: 30rpx 0 30rpx;
}

.designer-kj .title {
  font-size: 38rpx;
  font-weight: 600;
  text-align: center;
}

.designer-kj .anli-detail {
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.designer-kj .anli-detail text {
  padding: 6px 0;
  color: #666;
}

.imgs {
  position: relative;
  height: 399rpx;
  margin: 32rpx 0 90rpx;
  overflow: visible;
}

.img-kj {
  width: 100%;
  height: 100%;
}

.img-dn {
  position: absolute;
  left: 50%;
  bottom: -70rpx;
  transform: translateX(-50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.name {
  font-weight: 600;
  font-size: 32rpx;
  text-align: center;
  color: #333;
}

.type {
  font-size: 28rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}

button {
  width: 260rpx;
  height: 60rpx;
  line-height: 62rpx;
  background: linear-gradient(to top, #e66505, #ff8a1b);
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 20rpx;
}

.list-item {
  padding: 20rpx 0;
}

.list-item image {
  width: 100%;
  height: 399rpx;
}

.list-item .discribe {
  font-size: 32rpx;
  margin-top: 10rpx;
}

.list-item .discribe text {
  font-weight: 600;
  margin-right: 14rpx;
}

.pl-bar {
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
  position: fixed;
  bottom: 0;
  align-items: center;
}

.pl-bar image {
  width: 41rpx;
  height: 41rpx;
  margin-left: 40rpx;
}

.isay {
  margin-left: 30rpx;
  height: 55rpx;
  line-height: 55rpx;
  width: 330rpx;
  border: 1px solid #c9c9c9;
  border-radius: 10rpx;
  font-size: 25rpx;
  text-indent: 20rpx;
}

.pl-flex {
  display: flex;
  align-items: center;
}

.conut-22 {
  font-size: 22rpx;
  color: black;
  display: inline-block;
  margin-left: 12rpx;
}

button.share {
  background: rgba(0, 0, 0, 0);
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  word-break: break-all;
  overflow: auto;
}

button.share::after {
  border: 0px;
}
