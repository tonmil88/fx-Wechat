/* pages/promote/list.wxss */
.anview-shaixuan{width: 100%;height: 100vh;}
.search{height: 60rpx;background-color: #f3f3f3;padding: 10rpx;line-height: 60rpx;font-size: 32rpx;font-weight: 600;border-bottom: 1rpx solid #ff552e; position: fixed; top: 0; left: 0; width: 100%; z-index: 99;}
.search span{color: #ff552e;}
view.dropdown-menu{position: fixed;z-index: 99;background-color: #fff;top: 0;display: table; margin-top: 80rpx;}
.dropdown-menu{width: 100%;height: auto;padding:20rpx 10rpx 10rpx;box-sizing: border-box; }
.input-group{display: flex;align-items: center;justify-content: center;width: 100%;margin-bottom: 20rpx;}
.input-group input{width: 74%;height: 70rpx;line-height: 70rpx;border: 1rpx solid #ccc;text-indent: 20rpx;padding: 0 10rpx;
}
.input-group .input-group-btn .btn{width: 100rpx;font-size: 24rpx;height: 62rpx;line-height: 60rpx;text-align: center;background-color: #ff552e;}
.out_line{box-sizing: border-box;}
.out_line .line_left{float: left;width: 100rpx;text-align: center;font-size: 32rpx;font-weight: 600;}
.out_line .line_right{float: left;width: calc(100% - 100rpx);font-size: 30rpx;}
.out_line .line_right .weui-cell__bd{display: inline-block;padding:5rpx 10rpx;margin: 0 0rpx 14rpx 30rpx;border: 1rpx solid #ff552e;}
.weui-cell__hd{display: none;}
.weui-cell__bd.active{background-color: #ff552e;color: #fff;}
.out_line .clear{clear: both;}
button{background-color: #ff552e;margin-top: 20rpx;color: #fff; margin: auto; height: 80rpx; line-height: 80rpx; width: 80%;}
.sxbj{background: rgba(0, 0, 0, 0.6);position: fixed;top: 0; left: 0;z-index: 10;width: 100vw; height: 100vh;}
.kind-list-img{ width: 40rpx; height: 40rpx;margin: 0 10rpx -7rpx 0;}
.anli-item {padding-top: 60rpx;width: 100%;}

.anli-view {
  position: relative;
  height: 340rpx;
  display: flex;
  border-bottom: 1px solid #eee;
  margin: 40rpx 30rpx;
  border-radius: 10rpx;
  /* background: url("http://oss.e-homes.com.cn/201911/929833ea2e.jpg"); */
}

.anli-view .avatar {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.anli-view .bgc {
  z-index: -99;
  width: 100%;
  height: 100%;
}

.anli-content {
  position: absolute;
  right: 0;
  top: 0;
  width: 30%;
  height: 70%;
  margin-left: 20rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 0 0 5px 5px;
  padding: 20rpx 10rpx 10rpx;
  box-sizing: border-box;
  text-align: center;
}

.anli-content view {
  height: 50%;
}

.anli-content view span {
  display: block;
  line-height: 50rpx;
}

.anli-title {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  overflow: hidden;
  font-size: 32rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
}

.pl-bottom {
  margin-top: 30rpx;
}
